<main>
    <header>
        <h2>edit ToDo</h2>
    </header>

    <form method="post" class="noteForm" action="/Note/edited">
        {{#with note}}
        <div>
            <label>Title
                <input type="text" name="title" value="{{title}}">
            </label>
        </div>
        <div>
            <label>Beschreibung
                <textarea name="description">{{description}}</textarea>
            </label>
        </div>
        <div>
            <label>Wichtigkeit
                <input type="number" min="0" max="5" name="importance" value="{{importance}}">
            </label>
        </div>
        <div>
            <label>Fertig bis
                <input type="date" name="dueDate" value="{{dueDate}}">
            </label>
        </div>
        <div>
            <label>Erledigt
                <div>
                <input type="checkbox" name="finished" {{#if finished}}checked{{/if}}>
                </div>
            </label>
        </div>
        <div class="submitNote">
            <input type="hidden" name="_id" value="{{_id}}">
            <input type="submit" value="Speichern" class="button">
            <a class="button" href="/">Abbruch</a>
        </div>
    {{/with}}
    </form>
</main>